//// to print name 5 times

class recursion{
 static int count = 0;
    public static void recur(){
        
        if (count == 5 ){
            return;
        }
        System.out.println("name");
         count++;
        recur();
    }
    
    
    
    
    

    public static void main(String[] args) {
        recur();
    }
}


///print n numbers

class recursion{
 static int n = 4;
    public static void recur(int n){
        
        if (n == 0 ){
            return;
        }
        System.out.println(n);
        recur(n-1);
        
    }
    
    
    
    
    

    public static void main(String[] args) {
        recur(n);
    }
}
//// another form


class recursion{
 static int n = 4;
    public static void recur(int n){
        
        if (n == 0 ){
            return;
        }
        
        recur(n-1);
     System.out.print(n+" ");
        
    }
    
    
    
    
    

    public static void main(String[] args) {
        recur(n);
    }
}
